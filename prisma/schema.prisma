generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Personal {
  id          Int    @id @default(autoincrement())
  firstname   String
  lastname    String
  email       String @unique
  idLine      String
  gitLink     String
  phoneNumber String

  introduceId Int?             @unique
  introduce   IntroduceDetail? @relation(fields: [introduceId], references: [id])

  skills    PersonalSkill[]
  education EducationDetail[]
  careers   Career[]
  projects  Projects[]
}

model Skill {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?
  imagePath   String

  personalSkills PersonalSkill[]
  projectSkills  ProjectSkill[]
}

model PersonalSkill {
  personalId Int
  skillId    Int

  personal Personal @relation(fields: [personalId], references: [id], onDelete: Cascade)
  skill    Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@id([personalId, skillId])
}

model ProjectSkill {
  projectId Int
  skillId   Int

  project Projects @relation(fields: [projectId], references: [id], onDelete: Cascade)
  skill   Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@id([projectId, skillId])
}

model IntroduceDetail {
  id         Int     @id @default(autoincrement())
  title      String
  titleIcon  String?
  titleEmoji String?
  detail     Json

  personal Personal?
}

model EducationDetail {
  id         Int     @id @default(autoincrement())
  title      String
  titleIcon  String?
  titleEmoji String?

  schoolName String?
  startDate  DateTime?
  endDate    DateTime?
  department String?
  detail     Json

  personalId Int
  personal   Personal @relation(fields: [personalId], references: [id], onDelete: Cascade)
}

model Career {
  id           Int       @id @default(autoincrement())
  companyName  String
  department   String
  startDate    DateTime?
  endDate      DateTime?
  experience   Json?
  companyLogo  String?
  achievements Json?

  personalId Int?
  personal   Personal?  @relation(fields: [personalId], references: [id], onDelete: Cascade)
  projects   Projects[]
}

model Projects {
  id          Int            @id @default(autoincrement())
  name        String
  description String?
  techStack   ProjectSkill[]
  overview    Json?
  role        Json?
  background  Json?
  problem     Json?
  solution    Json?
  link        String?
  attachments Json?

  personalId Int?
  personal   Personal? @relation(fields: [personalId], references: [id], onDelete: Cascade)

  careerId Int?
  career   Career? @relation(fields: [careerId], references: [id])
}
